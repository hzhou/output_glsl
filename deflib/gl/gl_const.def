macros:
    # unit square points
    P0: -1, -1
    P1:  1, -1
    P2:  1,  1
    P3: -1,  1
    # unit cube points
    P000: -1, -1, -1
    P001: -1, -1, 1
    P010: -1, 1, -1
    P011: -1, 1, 1
    P100: 1, -1, -1
    P101: 1, -1, 1
    P110: 1, 1, -1
    P111: 1, 1, 1

    Quad: $1, $2, $3, $1, $3, $4

    # basic color
    black: 0,0,0
    white: 1,1,1
    red: 1,0,0
    green: 0,1,0
    blue: 0,0,1
    yellow: 1,1,0
    purple: 1,0,1
    cyan: 0,1,1

    gray: $1,$1,$1

    normal_f: 0,0,-1
    normal_b: 0,0,1
    normal_u: 0,1,0
    normal_d: 0,-1,0
    normal_l: -1,0,0
    normal_r: 1,0,0

